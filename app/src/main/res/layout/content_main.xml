<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shortcuts.nura.com.shortcuts.MainActivity"
    tools:showIn="@layout/activity_main"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@string/abc_capital_on"
        android:text="Welcome to Caller's Screen"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:textColor="@color/highlighted_text_material_light"
        android:singleLine="true"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_action_button_min_width_material" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TableForButtons"
        android:layout_alignParentLeft="true"
        android:layout_margin="0dp"
        android:stretchColumns="*"
        android:layout_alignParentStart="true"></TableLayout>

</RelativeLayout>
